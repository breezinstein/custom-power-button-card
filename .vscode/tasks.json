{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Custom Card",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Watch and Build",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Lint Code",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"lint"
			],
			"group": "test",
			"problemMatcher": ["$eslint-stylish"]
		}
	]
}